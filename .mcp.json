{
  "mcpServers": {
    "codebase": {
      "command": "python3",
      "args": [
        "scripts/mcp_codebase_server.py",
        "build/Debug/docs/codebase.db"
      ]
    },
    "traceability": {
      "command": "python3",
      "args": [
        "scripts/traceability/traceability_server.py",
        "build/Debug/docs/traceability.db",
        "--codebase-db",
        "build/Debug/docs/codebase.db"
      ]
    },
    "replay": {
      "command": "python3",
      "args": [
        "replay/mcp_server/server.py"
      ],
      "env": {
        "PYTHONPATH": "build/Debug/debug"
      }
    }
  }
}
