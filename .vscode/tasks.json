{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "buildType",
            "description": "Build Type",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Release"
        },
        {
            "id": "ClangTidyFix",
            "description": "Build Type",
            "type": "pickString",
            "options": [
                "--fix",
                ""
            ],
            "default": "--fix"
        },
        {
            "id": "enableCoverage",
            "description": "Enable Code Coverage",
            "type": "pickString",
            "options": [
                "False",
                "True"
            ],
            "default": "False"
        }
    ],
    "tasks": [
        {
            "label": "Conan Build",
            "type": "shell",
            "command": "conan build . --build=missing -s build_type=${input:buildType} -o \"&:enable_coverage=${input:enableCoverage}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CMake Build",
            "hide": true,
            "type": "shell",
            "command": "cmake --build ${command:cmake.buildDirectory}",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "coverage-all"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Open Coverage Report",
            "type": "shell",
            "command": "open",
            "args": [
                "${workspaceFolder}/build/Debug/coverage/index.html"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Create Conan Dependencies",
            "type": "shell",
            "command": [
                "echo '=== Building Conan Dependencies ===';",
                "conan create conan/spirv_cross --build=missing -s build_type=Release;",
                "conan create conan/sdl_shadercross --build=missing -s build_type=Release;",
                "conan create conan/dxc --build=missing -s build_type=Release;",
                "conan create conan/sdl --build=missing -s build_type=Debug;",
                "conan create conan/sdl --build=missing -s build_type=Release;",
                "conan create conan/sdl_image --build=missing -s build_type=Release;",
                "conan create conan/sdl_image --build=missing -s build_type=Debug;",
                "conan create conan/sdl_mixer --build=missing -s build_type=Release;",
                "conan create conan/sdl_mixer --build=missing -s build_type=Debug;",
                "conan create conan/sdl_ttf --build=missing -s build_type=Release;",
                "conan create conan/sdl_ttf --build=missing -s build_type=Debug;",
                "conan create conan/qhull --build=missing -s build_type=Release;",
                "conan create conan/qhull --build=missing -s build_type=Debug;",
                "conan create conan/cpp_sqlite --build=missing -s build_type=Release;",
                "conan create conan/cpp_sqlite --build=missing -s build_type=Debug;",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SHADERCROSS_INSTALL_DIR": "${workspaceFolder}/installs/sdl_shadercross",
                    "DXC_INSTALL_DIR": "${workspaceFolder}/installs/dxc"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Python",
            "type": "shell",
            "command": "bash python/setup.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "python3 -m pytest msd/msd-pybind/test/ -v",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "dependsOn": [
                "Setup Python"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Replay Server",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/replay/start_server.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Run clang-tidy",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/analysis/scripts/run_clang_tidy.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run clang-tidy",
            "type": "shell",
            "command": "bash ${workspaceFolder}/analysis/scripts/run_clang_tidy.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compile Shaders",
            "type": "shell",
            "command": "bash",
            "args": [
                "msd/msd-gui/src/Content/Shaders/Source/compile.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}/installs/sdl_shadercross/bin:${workspaceFolder}/installs/dxc/bin:${env:PATH}"
                }
            },
            "dependsOn": [
                "Create Conan Dependencies"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}